{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "dependencyDashboard": true,
    "extends": [
        "config:recommended"
    ],
    "forkProcessing": "enabled",
    "labels": [
        "renovate"
    ],
    "packageRules": [
        {
            "automerge": true,
            "matchCurrentVersion": "!/^0/",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        },
        {
            "automerge": false,
            "groupName": "python-dependencies",
            "labels": [
                "dependencies",
                "python"
            ],
            "matchDepTypes": [
                "dependencies",
                "optionalDependencies",
                "peerDependencies",
                "devDependencies"
            ],
            "matchFileNames": [
                "pyproject.toml"
            ]
        },
        {
            "automerge": true,
            "groupName": "python-dev-tools",
            "labels": [
                "dev-dependencies",
                "python"
            ],
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchPackageNames": [
                "ruff",
                "mkdocs",
                "mkdocs-material"
            ]
        },
        {
            "automerge": true,
            "groupName": "python-dev-tools",
            "labels": [
                "dev-dependencies",
                "python"
            ],
            "matchDepTypes": [
                "dependencies",
                "optionalDependencies",
                "devDependencies"
            ],
            "matchPackageNames": [
                "uv"
            ]
        },
        {
            "automerge": true,
            "groupName": "devcontainer",
            "labels": [
                "devcontainer"
            ],
            "matchFileNames": [
                ".devcontainer/devcontainer.json"
            ],
            "stabilityDays": 7
        },
        {
            "automerge": true,
            "groupName": "docker-python-version",
            "labels": [
                "docker",
                "python"
            ],
            "matchFileNames": [
                "Dockerfile"
            ],
            "matchPackageNames": [
                "python"
            ]
        }
    ],
    "platformAutomerge": true,
    "prCreation": "immediate",
    "requiredStatusChecks": [
        "Main"
    ],
    "timezone": "Europe/Zurich"
}