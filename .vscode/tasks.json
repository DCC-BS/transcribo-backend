{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "uv run fastapi dev ./src/transcribo_backend/app.py",
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "group": "test",
            "command": "uv run pytest",
            "problemMatcher": [
                "$python"
            ]
        }
    ]
}